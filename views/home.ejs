<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>EmptyCup</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link rel="stylesheet" href="/styles.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

</head>
<body>

  <div class="top">
    <i>logo</i>
    <h1>EmptyCup</h1>
    <i class="fas fa-ellipsis-v"></i>
  </div>

  <div class="icon-menu">
    <div class="icon-item active">
      <img src="/icons/contacts.png" alt="Contacts" />
      <p>Contacts</p>
    </div>
    <div class="icon-item">
      <img src="/icons/gallery.png" alt="Gallery" />
      <p>Gallery</p>
    </div>
    <div class="icon-item disabled">
      <img src="/icons/map.png" alt="Map" />
      <p>Map</p>
    </div>
    <div class="icon-item">
      <img src="/icons/shortlist.png" alt="Shortlisted" />
      <p>Shortlisted</p>
    </div>
    <div class="icon-item">
      <img src="/icons/sort.png" alt="Sort" />
      <p>Sort</p>
    </div>
  </div>

  <% for (let post of posts) { %>
    <div class="post-card">
      <div class="card-content">
        <h3><%= post.title %></h3>
        <p>⭐⭐⭐⭐☆</p>
        <p><%= post.description %></p>
        <div class="details-row">
          <div><%= post.project %><br><span>Projects</span></div>
          <div><%= post.years %><br><span>Years</span></div>
          <div><%= post.price %><br><span>Price</span></div>
        </div>
        <div class="contact-info">
          +91 - <%= post.contact %><br>
          +91 - <%= post.contact %>
        </div>
      </div>
      <div class="vertical-line"></div>
      <div class="card-actions">
        <div>
          <i class="fas fa-arrow-right"></i>
          <p>Details</p>
        </div>
        <div>
          <i class="fas fa-eye-slash"></i>
          <p>Hide</p>
        </div>
        <div>
          <button>
          <i class="fas fa-bookmark"></i>
          <p>Shortlist</p>
          </button>
        </div>
        <div>
          <i class="fas fa-exclamation-circle"></i>
          <p>Report</p>
        </div>
      </div>
    </div>
  <% } %>

</body>
</html>
